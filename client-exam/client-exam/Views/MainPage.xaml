<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="client_exam.Views.MainPage"
             BackgroundColor="Black"
             Title="">
    <VerticalStackLayout x:Name="MainLayout"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        >
        <Button x:Name="Manager"
            Text="Manager"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TextColor="Grey"
            FontSize="Medium"
            Padding="4"
            Margin="4"
            WidthRequest="260"
            BackgroundColor="Black"
            Clicked="ManagerClicked"
            Pressed="ManagerPressed"
            Released="ManagerReleased"
            BorderColor="Gray"
            BorderWidth="2"
            />
        <Button x:Name="Teacher"
            Text="Teacher"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TextColor="Grey"
            FontSize="Medium"
            Padding="4"
            Margin="4"
            WidthRequest="260"
            BackgroundColor="Black"
            Clicked="TeacherClicked"
            Pressed="TeacherPressed"
            Released="TeacherReleased"
            BorderColor="Gray"
            BorderWidth="2"
            />
    </VerticalStackLayout>
</ContentPage>